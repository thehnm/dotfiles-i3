    passmenunotify
alt + f
    passotpmenunotify
alt + n
	note

alt + shift + d
	clearclipboard && notify-send -u normal -t 3000 "Clipboard deleted"

alt + shift + q
    sysact

alt + shift + x
    slock -m "$(fortune | cowsay -f sodomized)"

alt + shift + s
	screentools

super + shift + {l,j,k}
	playerctl -p spotify {play-pause,next,previous}

alt + shift + {l,j,k}
	mpc {toggle,next,prev}

alt + o; {b,m,v,n,r,t,c,f,k}
	{$BROWSER, $TERMINAL -e neomutt, virt-manager, $TERMINAL -e ncmpcpp, $TERMINAL -e newsboat, $TERMINAL -e tremc, calc, $TERMINAL -e ranger, $TERMINAL -e ikhal}

XF86Audio{RaiseVolume,LowerVolume,Mute}
	{pamixer -i 1, pamixer -d 1, pamixer -t} && refreshbar

XF86MonBrightness{Up,Down}
	light {-A 1, -U 1} && refreshbar

alt + shift + w
    switchwindow

alt + u
    unmount

ctrl + space
	dunstctl close

ctrl + shift + space
	dunstctl close-all
